{
    "compilerOptions": {
      "module": "esnext",
      "lib": [
        "es2017",
        "es2016",
        "es2015",
        "dom"
      ],
      "jsx": "preserve",
      "outDir": "build/",
      "noImplicitAny": true,
      "allowJs": false,
      "removeComments": true,
      "target": "es6",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": true,
      "isolatedModules": true
    },
    "include": [
      "src",
      "chrome",
      "test"
    ],
    "rules": {
      "no-console": false,
      "interface-name": [
        true,
        "never"
      ]
    }
  }